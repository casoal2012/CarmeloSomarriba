@model List<WEB_Core_Conv2.Models.Pacientes>

@{
    ViewData["Title"] = "Inicio";
}
<h1 class="text-capitalize p-2 bg-primary text-white ">Lista de pacientes.</h1>
<div>
    <table class ="table table-bordered table-hover table table-bordered table table-striped table-dark">
        <thead class="thead-dark">
       <thead>
               <tr>
                <th>
                    Nombre del cliente
                 </th>
                 <th>
                    Direccion
                 </th>
                 <th>
                    Telefono
                  </th>
                  <th>
                    Edad
                  </th>
                </tr>
       </thead>
                <tbody>
            @{
                foreach(var item in Model)
                {
                    <tr>
                    <td>@item.Nombre</td>
                     <td>@item.Direccion</td>
                     <td>@item.Telefono</td>
                     <td>@item.Edad</td>
                    </tr>
                }
            }
        </tbody>
     </table>
</div>


<div>
    <a class="btn btn-outline-danger " href="~/home/Formulario">Agregar Nuevo</a>
    <a class="btn btn-outline-danger " href="~/home/Productos">Agregar Productos</a>
    <a class="btn btn-outline-success">Filtrar</a>
    <a class="btn btn-outline-info">Limpiar</a>
</div>

@DateTime.Now.ToShortDateString(); 